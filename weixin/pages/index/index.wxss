/**index.wxss**/


page{
    font-size: 13px;
}
.container,.container swiper,.pic{
width: 100%;
height:390rpx;
}

/* 3张图 */
.index_container li{
  width: 280rpx;
  height: 260rpx;
}
.index_container li navigator image{
  height:250rpx;
}
/* 商品模块 */
.bg{
  background-color: #fff;
  text-align: center;
  line-height: 100rpx;
  width:100%;
  height: 80rpx;
}
/* 通用箭头 */
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  margin-right: 20rpx;
  border-right:3px solid #ddd;
  border-top:3px solid #ddd;
  transform: rotate(45deg)
}
/* 海鲜商品 */
.products{
  background-color: #eee;  
}
.index_products{
  flex-wrap: wrap;
  width: 100%;
  padding: 10rpx;
}

.index_products li{
  margin:5rpx;
  width: 47%;
  height: 300rpx;
  background-color: #fff;
  border:1rpx solid #ddd;
  padding-bottom: 20rpx;
}
.index_products .productDetails{
  height: 100%;
}
.index_products li view{
  margin:5rpx 10rpx;
}
.index_products li view image{
  width: 100%;height:70%;
}
.index_products li .rFloat{
  width: 40rpx;
  height:40rpx;
  float:right;
  margin-top: -40rpx;
  margin-right: 20rpx;
}
.footer{
  text-align:center;
  line-height: 100rpx;
  color:rgb(153, 149, 149);
  width: 100%;
  height:100rpx;
  background-color: #fff;
}

/*弹出框的加购和结算按钮，其余在app.wxss  */
.addBtn,.buyBtn{
  color: #fff;
  text-align: center;
  padding: 20rpx 0; 
  font-size: 15px;
  width: 50%;
}
.addBtn{
   background-color: #f60;
}
.buyBtn{
  background-color: #f00;
}