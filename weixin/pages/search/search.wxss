/* pages/search/search.wxss */
/*无商品样式  */
.noProducts{
 text-align: center
}
.noProducts text{
  font-size: 14px;
}
.noProducts view{
  margin-top:30rpx;
  font-size: 12px;
  color: #ddd;
}
/*商品列表  */
.all_product{
  width:100%;  font-size: 11px;
  display: flex;
  padding-bottom: 10rpx;
  border: 2rpx solid #ddd;
}

.all_product li:first-child{
  width:20%;
    padding: 20rpx;
}
.all_product li:last-child{
  width: 71%;
    padding: 10rpx;
  position: relative;
}
.all_product li image{
  width:100%;height:100%;
}
/*详情样式  */
ul li view{
  margin:10rpx 0rpx;
}
.title{
  font-size:14px;
  font-weight: bold;
}
.detail{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.price{
  color:#f00;
  font-size: 16px;
  font-weight: bolder;
}
.num{
  color:#9e9e9e;
  font-size: 12px;
}
.function {
  position: absolute;
  width:50rpx;
  height:50rpx;
  right:40rpx;
  bottom: 0rpx;
}
