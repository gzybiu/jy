/* pages/products/assessment/assessment.wxss */
.user_img{
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
}
.list_container{
  padding: 40rpx 20rpx 40rpx 30rpx;
  border-top:1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
/*ul  flex  */
.flex_contaier,.content_flex{
  display: flex;
}
.flex_contaier li:first-child{
  width: 15%;
  margin-right:10rpx;
}
.flex_contaier li{
   width:40%; 
}

.flex_contaier li:last-child text{
  float:right;
  font-size: 12px;
  color:#ddd;
}

/*评分  */
.shop-star{
  position: relative;
  width:156rpx;
}
 .star-after{
  color:#fe1938;
  position: absolute; 
  overflow: hidden; 
  z-index: 1;   
}
.star-before{
  color:#e2e2e2;
  position: absolute;
  z-index: 0; 
} 
/*评论内容  */
.content{
  padding-left: 120rpx;
}
.content_details{
  padding:20rpx;
  padding-left: 0rpx;
  font-size: 14px;
}

.content_flex{
  flex-wrap: wrap;
  width:100%;
  justify-content: space-between;
}
.content_flex li{
  width:30%;
}
/*评论区图片  */
.content image{
  border-radius: 20rpx;
  width: 100%;
  height:200rpx;
}
/*点击显示大图片  */
.largeImg{
  position: fixed;
  height:500rpx;
  width:500rpx;
  top:50%;

}
